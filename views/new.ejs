<% layout('/layouts/boilerplate') -%>
<body>
     <br>
     <form method="post" action="/listing/new" class="needs-validation" novalidate>
      <div class="row"></div>
  
      <div class="col col-8 offset-2">
          <h2>Create New List</h2>
  
          <!-- Title Field -->
          <div>
              <label for="title" class="form-label">Title</label>
              <input type="text" name="List[title]" placeholder="enter title" class="form-control mb-3" required>
              <div class="invalid-feedback">
                  Please enter a title
              </div>
          </div>
  
          <!-- Description Field -->
          <div>
              <label for="description" class="form-label">Description</label>
              <textarea name="List[description]" placeholder="description" class="form-control mb-3" required></textarea>
              <div class="invalid-feedback">
                  Please write a description
              </div>
          </div>
  
          <!-- Image Field -->
          <div>
              <label for="link" class="form-label">Link</label>  
              <input type="text" name="List[image]" placeholder="link of image" class="form-control mb-3">
              <div class="invalid-feedback">
                  Please enter an image link
              </div>
          </div>
  
          <!-- Price Field -->
          <div class="row">
              <div class="col col-md-4">
                  <label for="price" class="form-label">Price</label>
                  <input type="number" name="List[price]" placeholder="enter price" class="form-control mb-3" required>
                  <div class="invalid-feedback">
                      Please enter a valid price
                  </div>
              </div>
  
              <!-- Country Field -->
              <div class="col col-md-8">
                  <label for="Country" class="form-label">Country</label>
                  <input type="text" name="List[country]" placeholder="enter country name" class="form-control mb-3" required>
                  <div class="invalid-feedback">
                      Please enter a country
                  </div>
              </div>
          </div>
  
          <!-- Location Field -->
          <div>
              <label for="location" class="form-label">Location</label>
              <input type="text" name="List[location]" placeholder="enter location" class="form-control mb-3" required>
              <div class="invalid-feedback">
                  Please enter a location
              </div>
          </div>
  
          <button class="btn btn-dark mb-3 BTN">Submit</button>
      </div>
  </form>
  
   
    
</body>