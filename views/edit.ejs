<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row">   
    <div class="col col-8 offset-2">
      <h1>Edit Your Listing</h1>
      <form method="POST" action="/listing/<%= home._id %>?_method=PUT" class="needs-validation" novalidate>
        <div class="mt-3 mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="List[title]" class="form-control" value="<%= home.title %>" required>
          <div class="invalid-feedback">
            Please enter title
          </div>
        </div>

        <div class="mt-3 mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="List[description]" class="form-control" required><%= home.description %></textarea>
          <div class="invalid-feedback">
            Please write description
          </div>
        </div>    

        <div class="mt-3 mb-3">     
          <label for="Location" class="form-label">Location</label>
          <input type="text" name="List[location]" value="<%= home.location %>" class="form-control" required>
          <div class="invalid-feedback">
            Please enter location
          </div>
        </div>

        <div class="row">
          <div class="mt-3 mb-3 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="List[country]" value="<%= home.country %>" class="form-control" required>
            <div class="invalid-feedback">
              Please enter country
            </div>
          </div>

          <div class="mt-3 mb-3 col-md-8">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="List[price]" value="<%= home.price %>" class="form-control" required>
            <div class="invalid-feedback">
              Please enter price
            </div>
          </div>  
        </div>

        <div class="mt-3 mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="text" name="List[image]" value="<%= home.image %>" class="form-control"required>
          <div class="invalid-feedback">
            Please enter image link
          </div>
        </div>

        <button class="btn btn-dark mb-3 BTN">Edit</button>
      </form>
    </div>
  </div>
</body>
